<!DOCTYPE html>
<html>
   <head>
      <title><%= yield(:title) %></title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
      <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
   </head>
   <body>
   <% flash.each do |message_type, message| %>
      <div class="fade in alert alert-<%= message_type %>"><%= message %></div>
      <% end %>  
      <header>
          <div class="container">
            <div class="row">
               <div class="title-col col-lg-4 col-md-4 col-sm-5 col-xs-12">
                  <div class="title pull-left">Sample app</div>
               </div>
               <div class="col-lg-8 col-md-8 col-sm-5 col-xs-12">
	               <div class="navbar navbar-default tekst-center" role="navigation">
	                  <button class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse" type="button">
	                  <span class="icon-bar"></span>
	                  <span class="icon-bar"></span>
	                  <span class="icon-bar"></span>
	                  </button>
	                  <div class="navbar-collapse navbar-responsive-collapse collapse">
	                     <ul class="nav navbar-nav">
	                        <li><%= link_to("Home", home_path) %></li>
	                        <li><%= link_to("Help", help_path) %></li>
                           <% if logged_in? %>
                           <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<strong class="caret"></strong></a>
                            <ul class="dropdown-menu">
                                        <li><%= link_to("All users", users_path) %></li>
                                        <li><%= link_to("Profile", user_path(current_user.id)) %></li>
                                        <li><%= link_to("Settings", edit_user_path(current_user.id)) %></li>
                                        <li class="divider"></li>
                                        <li><%= link_to("Logout", logout_path, method: :delete) %></li>
                              </ul>
                            </li>
                           <% else %>
	                          <li><%= link_to("Login", login_path) %></li>
                           <% end %>
	                     </ul>
	                  </div>
	               </div>
               </div>
            </div>
         </div>
      </header>
      <%= yield %>
      <footer>
         <div class="cf footer-container container navbar-fixed-bottom">
            <div class="row">
               <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                  <div class="footer-backlink">
                     <p><a href="#">Ruby On Rails Tutorial</a></p>
                  </div>
               </div>
               <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                  <ul class="footer-links-list">
                     <li><%= link_to("About", about_path) %></li>
                     <li><%= link_to("Contact", contact_path) %></li>
                     <li><%= link_to("News", home_path) %></li>
                  </ul>
               </div>
            </div>
         </div>
      </footer>
         <%= debug(params) if Rails.env.development? %>

      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
   </body>
</html>