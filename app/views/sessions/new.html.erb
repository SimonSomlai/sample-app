<% content_for :title, "Login" %>
<div class="container">
   <div class="row">
      <div class="col-md-6 col-md-offset-3">
         <h1 class="text-center">Login</h1>
         <%= form_for(:session, url: login_path) do |f| %>
         <div class="form-group">
            <%= f.label :email, "Email" %><br/>
            <%= f.email_field :email, required: true, :class => "form-control" %>
         </div>
         <div class="form-group">
            <%= f.label :password, "Password" %> <%= link_to("Forgot password?", new_password_reset_path, class: "inline") %><br/>
            <%= f.password_field :password, required: true, :class => "form-control" %>
         </div>
         <div class="form-group">
            <%= f.check_box :remember_me, :class => "checkbox-inline" %>
            <%= f.label :remember_me, "Remember me on this computer", :class => "inline"%>
         </div>
         <div class="form-group">
            <%= f.submit "Login", class: "btn btn-primary" %>
         </div>
         <% end %>
         <p>New user? <%= link_to("Sign up now!", signup_path) %>
      </div>
   </div>
</div>

