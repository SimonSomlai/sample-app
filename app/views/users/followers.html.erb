<% content_for :title, @user.name %>
<div class="container">
   <div class="row">
      <aside class="col-md-4">
         <section class="user_info cf">
            <h1>
               <%= gravatar_for @user %>
               <%= @user.name %>
            </h1>
            <span><%= link_to("View my profile", current_user) %></span>
            <p><%= @user.email %></p>
         </section>
         <section class="stats">
            <%= render "shared/stats" %>
         </section>
         <section class="followers-mini">
            <%= render "shared/followers_mini" %>
         </section>
      </aside>
      <div class="col-md-8">
         <%= render "shared/follow_form" if logged_in? %>
         <%= render "shared/followers" %>
      </div>
   </div>
</div>