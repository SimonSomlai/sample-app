<% content_for :title, "Home" %>
<% if logged_in? %> 
<div class="container">
   <div class="row">
      <aside class="col-md-4">
         <section class="user_info cf">
            <%= render "shared/user_info" %>
         </section>
         <section class="stats">
            <%= render "shared/stats" %>
         </section>
         <section class="micropost_form">
            <%= render "shared/micropost_form" %>
         </section>
      </aside>
      <div class="col-md-8">
         <% if @feed_items.any? %>
         <h3>Micropost Feed</h3>
         <ol class="microposts">
            <%= render @feed_items %>
         </ol>
         <%= will_paginate @feed_items %>
         <% end %>
      </div>
   </div>
</div>
<% else %>
<div class="homepage-container container">
   <div class="row">
      <div class="homepage col-lg-12 col-md-12 col-sm-12 col-xs-12">
         <h1 class="center-block text-center">Welcome to the sample app</h1>
         <p class="center-block text-center">This is the home page for the ruby on rails tutorial - It's an application with similar functionality as twitter. Signing up won't put you on a emaillist - But there will be an account-activation email. Try it out! :)</p>
         <%= link_to("Sign up now", signup_path , :class => "btn btn-success center-block text-center") %>
         <br/>
         <br/>
         <h3 class="center-block text-center cf">Most Recent Users</h3>
         <div class="users center-block text-center">
            <% @users.each do |user| %>
            <%= link_to image_tag(user_gravatar_url(user), class: "gravatar-home text-center"), user %>
            <% end %>
         </div>
      </div>
   </div>
</div>
<% end %>