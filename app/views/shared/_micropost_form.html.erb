<%= form_for(@micropost, url: microposts_path(user: current_user), html: { multipart: true }) do |f| %>
<%= render "shared/error_messages", object: f.object %>
<div class="form-group">
   <%= f.label :content, "New Message" %>
   <%= f.text_area :content, :class => "form-control", placeholder: "Type your message here.." %>
</div>
<%= f.file_field :picture, :options => { class: "form-control", accept: "image/jpeg.image,image/gif,image/png"} %>
<%= f.submit "Post Message", class: "btn btn-primary" %>
<% end %>